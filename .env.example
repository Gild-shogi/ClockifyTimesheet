# Clockify API設定
# https://clockify.me/user/settings でAPIキーを取得してください
CLOCKIFY_API_KEY=your_api_key_here

# ワークスペースID
# https://app.clockify.me/workspaces から確認できます
CLOCKIFY_WORKSPACE_ID=your_workspace_id_here

# ユーザーID
# https://app.clockify.me/tracker から確認できます
CLOCKIFY_USER_ID=your_user_id_here

# タイムゾーン設定
# 例: Asia/Tokyo, America/New_York, Europe/London
TIMEZONE=Asia/Tokyo

# Excel設定（オプション）
# ヘッダー色（16進数、例: 4472C4=青、FF6B6B=赤、4ECDC4=緑）
EXCEL_HEADER_COLOR=4472C4

# 交互行の色（16進数）
EXCEL_ALTERNATE_ROW_COLOR=F2F2F2

# 罫線スタイル（thin, medium, thick）
EXCEL_BORDER_STYLE=thin

# フォントサイズ
EXCEL_FONT_SIZE=11

# フォント名
EXCEL_FONT_NAME=Meiryo UI

# 日付グループ境界線スタイル
EXCEL_DATE_BORDER_STYLE=medium
EXCEL_DATE_BORDER_COLOR=333333